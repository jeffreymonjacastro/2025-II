{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile MPI C++",
      "type": "shell",
      "command": "mpicxx",
      "args": [
        "-o",
        "${fileBasenameNoExtension}",
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "Run MPI Program",
      "type": "shell",
      "command": "mpirun",
      "args": [
        "-np",
        "4",
        "./${fileBasenameNoExtension}"
      ],
      "group": "test",
      "dependsOn": "Compile MPI C++",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}